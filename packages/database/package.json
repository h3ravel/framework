{
  "name": "@h3ravel/database",
  "version": "11.5.0-alpha.7",
  "description": "Modeling data and migration system for H3ravel.",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "h3ravel": {
    "providers": [
      "DatabaseServiceProvider"
    ]
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./*": "./*"
    }
  },
  "homepage": "https://h3ravel.toneflix.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h3ravel/framework.git",
    "directory": "packages/database"
  },
  "keywords": [
    "h3ravel",
    "modern",
    "web",
    "H3",
    "framework",
    "nodejs",
    "typescript",
    "laravel"
  ],
  "scripts": {
    "build": "tsdown --config-loader unconfig",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest --passWithNoTests",
    "version-patch": "pnpm version patch"
  },
  "dependencies": {
    "@h3ravel/arquebus": "catalog:prod",
    "@h3ravel/musket": "catalog:prod",
    "sqlite3": "catalog:"
  },
  "peerDependencies": {
    "@h3ravel/core": "workspace:^1.22.0-alpha.7",
    "@h3ravel/shared": "workspace:^0.29.0-alpha.7",
    "@h3ravel/filesystem": "workspace:^0.4.15-alpha.7",
    "@h3ravel/support": "workspace:^0.17.0-alpha.7"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}