{
  "name": "h3ravel-monorepo",
  "private": false,
  "version": "0.1.2",
  "description": "Monorepo for H3ravel, a modern TypeScript runtime-agnostic web framework built on H3.",
  "type": "module",
  "homepage": "https://h3ravel.toneflix.net",
  "repository": "github:h3ravel/framework",
  "keywords": [
    "h3ravel",
    "modern",
    "web",
    "H3",
    "framework",
    "nodejs",
    "typescript",
    "laravel",
    "bun",
    "denoland",
    "deno"
  ],
  "scripts": {
    "barrel": "barrelize >/dev/null",
    "_barrel": "pnpm -r --filter './packages/*' run barrel",
    "patch": "pnpm -r --filter './packages/*' version patch",
    "build": "pnpm barrel && pnpm -r --workspace-concurrency=1 --filter './packages/*' run build",
    "dev": "pnpm barrel && pnpm -r --parallel --filter './examples/*' run dev",
    "devx": "pnpm './packages/*' run dev",
    "start": "pnpm --filter @h3ravel/core start",
    "lint": "pnpm -r --filter './packages/*' run lint",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=testing jest --passWithNoTests",
    "coverage": "NODE_NO_WARNINGS=1 NODE_ENV=testing JEST_JUNIT_CLASSNAME=coverage jest --passWithNoTests --coverage --coverageDirectory=coverage",
    "prepare": "husky",
    "postinstall": "pnpm barrel",
    "undev": "tsx watch packages/core/src/main.ts",
    "cleanup": "find . \\( -name 'node_modules' -o -name 'dist' \\) -type d -prune -exec rm -rf '{}' +",
    "release": "pnpm build && pnpm changeset version && pnpm changeset publish",
    "publish": "pnpm build && pnpm patch && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@aws-sdk/client-sesv2": "^3.883.0",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "@swc/core": "^1.13.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "barrelize": "^1.6.4",
    "barrelsby": "^2.8.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "dotenv-expand": "^12.0.3",
    "edge.js": "^6.3.0",
    "escalade": "^3.2.0",
    "eslint": "^9.35.0",
    "fetchdts": "^0.1.7",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "jest": "^30.1.3",
    "jest-junit": "^16.0.0",
    "knex": "^3.1.0",
    "nodemailer": "^7.0.6",
    "path": "^0.12.7",
    "pnpm": "^10.15.1",
    "radashi": "^12.6.2",
    "resolve-from": "^5.0.0",
    "ts-jest": "^29.4.1",
    "tsconfig-paths": "^4.2.0",
    "tsdown": "^0.15.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "utility-types": "^3.11.0"
  },
  "packageManager": "pnpm@10.14.0"
}
