{
  "name": "h3ravel-monorepo",
  "private": false,
  "version": "0.1.2",
  "description": "Monorepo for H3ravel, a modern TypeScript runtime-agnostic web framework built on H3.",
  "type": "module",
  "homepage": "https://h3ravel.toneflix.net",
  "repository": "github:h3ravel/framework",
  "keywords": [
    "h3ravel",
    "modern",
    "web",
    "H3",
    "framework",
    "nodejs",
    "typescript",
    "laravel",
    "bun",
    "denoland",
    "deno"
  ],
  "scripts": {
    "barrel": "barrelize >/dev/null",
    "_barrel": "pnpm -r --filter './packages/*' run barrel",
    "patch": "pnpm -r --filter './packages/*' version patch",
    "build": "pnpm barrel && pnpm -r --workspace-concurrency=1 --filter './packages/*' run build",
    "devx": "pnpm barrel && pnpm -r --parallel --filter './examples/*' run dev",
    "dev": "pnpm barrel && pnpm -r --parallel --filter './packages/*' run dev",
    "start": "pnpm --filter @h3ravel/core start",
    "lint": "pnpm -r --filter './packages/*' run lint",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=testing vitest",
    "coverage": "NODE_NO_WARNINGS=1 NODE_ENV=testing vitest run --coverage",
    "prepare": "husky",
    "postinstall": "pnpm barrel",
    "undev": "tsx watch packages/core/src/main.ts",
    "cleanup": "find . \\( -name 'node_modules' -o -name 'dist' -o -name 'bin' \\) -type d -prune -exec rimraf '{}' +",
    "release": "pnpm build && pnpm changeset version && pnpm changeset publish",
    "publish": "pnpm patch-all && pnpm -r publish --access public",
    "patch-all": "pnpm build && pnpm -r version-patch"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "devDependencies": {
    "@aws-sdk/client-sesv2": "^3.925.0",
    "@changesets/cli": "catalog:",
    "@eslint/js": "catalog:",
    "@swc/core": "catalog:",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "barrelize": "catalog:",
    "barrelsby": "catalog:",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "catalog:",
    "dotenv-expand": "catalog:",
    "edge.js": "catalog:",
    "escalade": "catalog:",
    "eslint": "catalog:",
    "fetchdts": "^0.1.7",
    "husky": "catalog:",
    "knex": "catalog:",
    "mysql2": "catalog:",
    "madge": "^8.0.0",
    "nodemailer": "^7.0.10",
    "path": "catalog:",
    "pnpm": "^10.20.0",
    "radashi": "^12.7.0",
    "resolve-from": "catalog:",
    "rimraf": "catalog:",
    "ts-node": "catalog:",
    "tsconfig-paths": "catalog:",
    "tsdown": "^0.16.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "catalog:",
    "utility-types": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.19.0"
}