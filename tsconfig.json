{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "exclude": [
    "**/console/bin",
    "dist",
    "**/dist",
    "**/**/dist",
    "**/node_modules",
    "node_modules",
    "**/node_modules/*",
    "**/public/**",
    "**/storage/**",
    "eslint.config.js",
    "jest.config.ts",
    "arquebus.config.js",
    "**/coverage/**"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
